<script language="javascript">
$(function(){
	if(3 != $("#node_type").val()){ 
		$("#node_content").hide();
	}
	$("#node_type").change(function(){
		var value= $(this).val();
		if(3 == value)
			$("#node_content").show();
		else
			$("#node_content").hide();
	});
	$("#node_content").click(function(){
		$("#content_name").val("手机数码");
		$("input[name=name]").val("手机数码");
		$("#content_id").val("1");
	})
})
</script>
