<!-- content start -->
	<div id="wrapper">
		<div id="content">
			<div class="clearfix">
				<h1><h1>编辑商品信息</h1></h1>
			</div>
			<br />
			<div class="cl"></div>
			
			<div id="productList">
				<form method="post" action="">
