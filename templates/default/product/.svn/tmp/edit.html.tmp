												<td>&nbsp;</td>
												<td>
													<input type="text" value="<!--{if $assign.page.last_updater}--><!--{$assign.page.last_updater}--><!--{/if}-->" class="textbox_text" maxlength="255" name="last_updater">
												</td>
											</tr>
										</tbody>
										</table>
									</td>
								</tr>
							</tbody>
